    <script>
        $(document).ready(function () {
            get_posts()
            // categorySelect가 변경된다면 function을 실행하라.
            $("#categorySelect").on("change", function () {
                get_posts($(this).val())
            })
        })

        function sign_out() {
            $.removeCookie('mytoken', {path: '/'});
            $.removeCookie('userName', {path: '/'});
            window.location.href = "/"
        }

        function get_posts(category) {
            // 상품창의 리스트를 삭제한다.
            $('#tbody-box').empty()
            console.log(category)
            console.log("Get Posts");
            $.ajax({
                type: "GET",
                // url: `/api/posts${category ? "?category=" + category : ""}`,
                url: `/api/posts`,
                data: {},
                success: function (response) {
                    //카테고리에 해당하는 goods를 가지고 온다.
                    let posts = response["result"]
                    for (let i = 0; i < posts.length; i++) {
                        const postId = posts[i]['postId']
                        const user = posts[i]['user']
                        const title = posts[i]['title']
                        // const content = posts[i]['content']
                        make_post(postId, user, title)
                    }
                }
            })
        }

        function make_post(postId, user, title) {

            let temp_html = `
            <tr id="word-${postId}">
                <td>${user}</td>
                <td><a href="/view/${postId}">${title}</a></td>
            </tr>`
            $('#tbody-box').append(temp_html)
        }

        function make_card(item) {
            let htmlTemp = `<div>
                                    <div class="card mb-2" onclick="location.href='/detail?goodsId=${item["goodsId"]}'">
                                        <div class="row no-gutters">
                                            <div class="col-sm-5" style="background: #868e96;">
                                                <img src="${item["thumbnailUrl"]}"
                                                     class="card-img-top h-100" alt="...">
                                            </div>
                                            <div class="col-sm-7 d-flex">
                                                <div class="card-body flex-fill">
                                                    <div class="card-title mb-auto">
                                                        <h5 style="display: inline">${item["name"]}</h5>
                                                        <span class="card-price ml-2">$${number2decimals(item["price"])}</span>
                                                    </div>
                                                    <span class="badge badge-secondary">${item["category"]}</span>
                                                    <!--                                <p class="card-text"><small class="text-muted">drink</small></p>-->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`
            $("#postList").append(htmlTemp)
        }

        function makeNoti(data) {
            let htmlTemp = `<div class="alert alert-sparta alert-dismissible show fade" role="alert" id="customerAlert">
                                    ${data["userName"]}님이 방금 <a href="#" class="alert-link">${data["goodsName"]}</a>을 구매했어요!
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>`
            $("body").append(htmlTemp)
        }


        function number2decimals(num) {
            return (Math.round(num * 100) / 100).toFixed(2);
        }
    </script>
